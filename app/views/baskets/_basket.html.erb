<div class="basket-product">
  <div class="item">
    <%= hidden_field_tag "booking_id_#{basket_counter+1}", basket.id %>
    <%= check_box "checkbox_#{basket_counter+1}", "result", {}, 1, 0 %>
    <div class="product-image">
      <%= image_tag basket.room_images.first.photo_url, class: "product-frame" %>
    </div>
    <h1><%= link_to basket.room_name, room_url(basket.room) %></h1>
    <br>
    <%= basket.start_date.to_date %> -> <%= basket.end_date.to_date %>
    <div class="product-details">
      <p><span><%= sanitize render_star(basket.room_rate_avg), attributes: %w(class data-icon) %></span></p>
    </div>
  </div>
  <div class="price"><%= number_to_currency(change_money(basket.room_price)) %></div>
  <div class="subtotal" id="subtotal_<%= basket_counter+1 %>" value="<%= change_money(basket.total_price) %>"><%= number_to_currency(change_money(basket.total_price)) %></div>
  <div class="remove">
    <%= link_to basket, method: :delete, data: { confirm: t(".confirm_dialog") } do %>
      <i class="fa fa-trash fa-2xl" ></i>
    <% end %>
  </div>
</div>
